@using ISO810_ComprasProject.Controllers
@model ISO810_ComprasProject.Models.LoginViewModel;
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LayoutCPBlank.cshtml";
}
<!--**********************************
	Content body start
***********************************-->
<div class="container-fluid h-100">
	<div class="row h-100">
		<div class="col-lg-6 col-md-12 col-sm-12 mx-auto align-self-center">
			<div class="login-form">
				<div class="text-center">
					<h3 class="title">Iniciar Sesión</h3>
					<p>Inicia sesión en tu cuenta para comenzar a utilizar el módulo de compras</p>
				</div>
				<form action="@Url.Action(nameof(AccountController.Login), nameof(AccountController).Replace("Controller",""))" method="post">
					<div class="mb-4">
						<label class="mb-1 text-dark">Email</label>
						<input type="email" class="form-control form-control" placeholder="correo@ejemplo.com" asp-for="Email">
					</div>
					<div class="mb-4 position-relative">
						<label class="mb-1 text-dark">Contraseña</label> 
						<input type="password" id="dz-password" class="form-control form-control" placeholder="123456" asp-for="Password">
						<span class="show-pass eye">

							<i class="fa fa-eye-slash"></i>
							<i class="fa fa-eye"></i>

						</span>
					</div>
					<div class="text-center mb-4">
						<button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
					</div>
					@if (ViewData["Mensaje"] != null)
					{
						<div class="alert alert-danger" role="alert">
							@ViewData["Mensaje"]
						</div>
					}
				</form>
				<p>
					¿Eres nuevo? 
					<a asp-controller="Account" asp-action="Register">Registrate aquí</a>.
				</p>
			</div>
		</div>
		<div class="col-xl-6 col-lg-6">
			<div class="pages-left h-100">
				<div class="login-content">
				</div>
				<div class="login-media text-center">
					<img src="~/cp/images/login.png" alt="">
				</div>
			</div>
		</div>
	</div>
</div>
<!--**********************************
	Content body end
***********************************-->
